<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="parentVBox" minHeight="-Infinity" minWidth="-Infinity" prefHeight="260.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.login.SingInController">
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
   <Label text="Сөз кошуу үчүн, системага кириниз.">
      <font>
         <Font name="System Bold" size="13.0" />
      </font>
   </Label>
   <TextField fx:id="textFieldEmail" promptText="Эл. почта">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </TextField>
   <TextField fx:id="textFieldPassword" promptText="Сыр сөз">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </TextField>
   <AnchorPane prefHeight="200.0" prefWidth="200.0" />
   <HBox prefHeight="100.0" prefWidth="200.0">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
      <Button minWidth="100.0" mnemonicParsing="false" onAction="#signIn" text="Кирүү" />
      <Button minWidth="100.0" mnemonicParsing="false" onAction="#signUp" text="Катталуу">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Button>
   </HBox>
</VBox>

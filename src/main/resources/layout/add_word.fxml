<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.edit.NewWordController">
    <children>
        <Label fx:id="labelLanguage" text="Language"/>
        <TextField fx:id="textFieldWord" promptText="Жаны сөз">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </TextField>
        <TextArea fx:id="textFieldDescription" prefHeight="200.0" prefWidth="200.0" promptText="Мааниси"
                  wrapText="true">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </TextArea>
        <HBox>
            <children>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#saveWord" text="Сактоо"/>
            </children>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
